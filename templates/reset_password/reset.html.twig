{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe | {{ parent() }}{% endblock %}

{% block body %}
    <section class="mx-auto max-w-screen-xl bg-gray-50 my-4 ">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
            <div class="w-full bg-white rounded-lg shadow  md:mt-0 sm:max-w-xl xl:p-0  ">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl ">
                        Réinitialisez votre mot de passe
                    </h1>

                    {{ form_start(resetForm, {  'attr':{ class:'space-y-4 md:space-y-6' }} ) }}

                    <div>
                        {{ form_label(resetForm.plainPassword.first) }}
                        {{ form_widget(resetForm.plainPassword.first) }}
                    </div>
                    <div>
                        {{ form_label(resetForm.plainPassword.second) }}
                        {{ form_widget(resetForm.plainPassword.second) }}
                    </div>

                    <div class="mt-2 mb-2 text-red-800">
                        <p>Je sais pas</p>
                        {{ form_errors(resetForm.plainPassword) }}
                    </div>

                    <button type="submit"
                            class="w-full text-white bg-secondary hover:bg-secondary focus:ring-4 focus:outline-none focus:ring-secondary-normal font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Réinitialiser le mot de passe
                    </button>

                    {{ form_end(resetForm) }}

                </div>

            </div>
        </div>
    </section>





{% endblock %}
